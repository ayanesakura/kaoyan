page {
  background: #f5f5f5;
  box-sizing: border-box;
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top);
}

.card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: calc(100% - 40rpx);
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.total-weight {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.total-weight.invalid {
  color: #e6614f;
  background: #fff2f0;
}

.error-msg {
  font-size: 24rpx;
  color: #e6614f;
  margin-left: 16rpx;
}

.weight-item {
  margin-bottom: 40rpx;
}

.weight-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.weight-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.weight-control slider {
  flex: 1;
}

.weight-input {
  width: 80rpx;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.unit {
  font-size: 28rpx;
  color: #666;
}

.tips {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.tip-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tip-title {
  color: #87CEEB;
  margin-bottom: 4rpx;
}

.tip-desc {
  color: #999;
}

.button-group {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 20rpx;
  gap: 20rpx;
}

.back-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  border: 1rpx solid #ddd;
}

.submit-btn {
  flex: 1;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
} 
page {
  background: #f5f5f5;
  box-sizing: border-box;
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: calc(100% - 40rpx);
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.total-weight {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.total-weight.invalid {
  color: #e6614f;
  background: #fff2f0;
}

.error-msg {
  font-size: 24rpx;
  color: #e6614f;
  margin-left: 16rpx;
}

.weight-item {
  margin-bottom: 30rpx;
}

.weight-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 14rpx;
}

.weight-control {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.weight-control slider {
  flex: 1;
  margin: 0;
}

.weight-input {
  width: 80rpx;
  height: 50rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.unit {
  font-size: 28rpx;
  color: #666;
}

.tips {
  margin: 10rpx 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.tip-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tip-title {
  color: #87CEEB;
  margin-bottom: 4rpx;
}

.tip-desc {
  color: #999;
}

.button-group {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  gap: 20rpx;
  margin-top: 20rpx;
}

.back-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  border: 1rpx solid #ddd;
}

.submit-btn {
  flex: 1;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
}

/* 进度条样式 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 0.8;
}

.progress-dot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #ddd;
  margin-bottom: 8rpx;
  border: 6rpx solid #f5f5f5;
  box-sizing: border-box;
}

.progress-text {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

.progress-line {
  flex: 1.5;
  height: 3rpx;
  background: #ddd;
  margin: 0 16rpx;
  margin-bottom: 32rpx;
}

.progress-item.active .progress-dot {
  background: #87CEEB;
  border-color: #e6f7ff;
}

.progress-item.active .progress-text {
  color: #87CEEB;
}

.progress-item.completed .progress-dot {
  background: #87CEEB;
  border-color: #e6f7ff;
}

.progress-item.completed .progress-text {
  color: #87CEEB;
}

.progress-line.completed {
  background: #87CEEB;
} 
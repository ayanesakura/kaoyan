page {
  background: #f5f5f5;
  box-sizing: border-box;
}

.container {
  width: 100%;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: calc(100% - 40rpx);
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.required::before {
  content: '*';
  color: #e6614f;
  margin-right: 4rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  text-align: right;
  margin-right: 10rpx;
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.tips {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.tip-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.tip-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tip-title {
  color: #87CEEB;
  margin-bottom: 4rpx;
}

.tip-desc {
  color: #999;
}

.submit-btn {
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  margin: 40rpx 20rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.school-select {
  position: absolute;
  top: 88rpx;
  left: -30rpx;
  right: -30rpx;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  z-index: 1000;
  max-height: 400rpx;
  overflow-y: auto;
  border-radius: 0 0 12rpx 12rpx;
  border: 1rpx solid #eee;
}

.school-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.school-item:last-child {
  border-bottom: none;
}

.school-item:active {
  background: #f5f5f5;
}

.loading {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.picker-wrapper {
  flex: 1;
}

.input-selected {
  color: #333;
}

.college-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.picker-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 40rpx;
  color: #999;
}

.picker-body {
  display: flex;
  height: 600rpx;
}

.college-list {
  width: 240rpx;
  border-right: 1rpx solid #eee;
  overflow-y: auto;
}

.major-list {
  flex: 1;
  overflow-y: auto;
}

.college-item, .major-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.college-item.selected {
  background: #f5f5f5;
  color: #87CEEB;
}

.college-item:active, .major-item:active {
  background: #f5f5f5;
}
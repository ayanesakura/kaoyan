.container {
  height: 100vh;
  background: #87CEEB;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-box {
  text-align: center;
  color: #fff;
}

.loading-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 50%;
  margin: 0 10rpx;
  animation: loading 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1.0); }
}

.loading-text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.loading-tips {
  font-size: 24rpx;
  opacity: 0.8;
} 
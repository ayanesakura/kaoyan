.container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 表格样式 */
.schools-list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
}

.table-header {
  display: flex;
  padding: 20rpx 0;
  background: #f8f9fa;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
  min-height: 40rpx;
  align-items: center;
}

.school-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s;
  min-height: 80rpx;
}

.school-item:hover {
  background-color: #f8f9fa;
}

/* 列宽设置 */
.col-school {
  flex: 3;
  padding: 0 20rpx;
  min-width: 240rpx;
}

.col-level {
  flex: 1.5;
  padding: 0 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  align-items: center;
  min-width: 120rpx;
  justify-content: flex-start;
}

.col-location {
  flex: 1;
  padding: 0 10rpx;
  min-width: 80rpx;
}

.col-score, .col-probability {
  flex: 1.2;
  padding: 0 10rpx;
  text-align: center;
  min-width: 100rpx;
}

/* 学校信息样式 */
.school-name-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.school-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.category-tag {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.category-chong {
  background: #ff4d4f;
}

.category-wen {
  background: #52c41a;
}

.category-bao {
  background: #1890ff;
}

.department {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.major-code {
  color: #1890ff;
  margin-left: 8rpx;
}

/* 标签样式 */
.tag-985, .tag-211, .tag-c9 {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-weight: 500;
  white-space: nowrap;
  display: inline-block;
  margin: 2rpx 4rpx;
}

.tag-985 {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  border: 1rpx solid rgba(40, 167, 69, 0.2);
}

.tag-211 {
  background: rgba(135, 206, 235, 0.1);
  color: #87CEEB;
  border: 1rpx solid rgba(135, 206, 235, 0.2);
}

.tag-c9 {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
  border: 1rpx solid rgba(220, 53, 69, 0.2);
}

/* 按钮样式 */
.btn-container {
  padding: 40rpx 20rpx;
}

.view-details-btn {
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.3);
  transition: all 0.3s;
}

.view-details-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(135, 206, 235, 0.3);
}

/* 加载和空状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #87CEEB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 表头文字样式 */
.table-header view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
} 
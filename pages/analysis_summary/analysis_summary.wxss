.container {
  padding: 10rpx;
  background: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.title-section {
  padding: 20rpx 10rpx 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 表格样式 */
.schools-list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
}

/* 统一列样式 */
.col-school,
.col-level,
.col-location,
.col-score,
.col-probability {
  padding: 0 16rpx; /* 统一所有列的内边距 */
  box-sizing: border-box;
}

/* 列宽设置 */
.col-school {
  flex: 2.5;
  min-width: 200rpx;
}

.col-level {
  flex: 1.2;
  min-width: 100rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  align-items: center;
}

.col-location {
  flex: 0.8;
  min-width: 70rpx;
}

.col-score, 
.col-probability {
  flex: 1;
  min-width: 90rpx;
}

/* 居中显示的列 */
.col-location, 
.col-score, 
.col-probability {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表头样式 */
.table-header {
  display: flex;
  padding: 16rpx 0;
  background: #f8f9fa;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
  min-height: 36rpx;
  align-items: center;
}

/* 表格行样式 */
.school-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s;
  min-height: 70rpx;
}

.school-item:hover {
  background-color: #f8f9fa;
}

/* 学校信息样式 */
.school-name-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.school-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 180rpx;
}

.category-tag {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.category-chong {
  background: #ff4d4f;
}

.category-wen {
  background: #52c41a;
}

.category-bao {
  background: #1890ff;
}

.department {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 180rpx;
}

.major-code {
  color: #1890ff;
  margin-left: 8rpx;
}

/* 标签样式 */
.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 2rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  height: 28rpx;
  min-width: 44rpx;
}

/* 985标签样式 */
.tag-985 {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
}

.tag-985:active {
  background: rgba(24, 144, 255, 0.15);
  transform: translateY(1rpx);
}

/* 211标签样式 */
.tag-211 {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
  border: 1rpx solid rgba(82, 196, 26, 0.2);
}

.tag-211:active {
  background: rgba(82, 196, 26, 0.15);
  transform: translateY(1rpx);
}

/* C9标签样式 */
.tag-C9 {
  background: rgba(250, 140, 22, 0.1);
  color: #fa8c16;
  border: 1rpx solid rgba(250, 140, 22, 0.2);
}

.tag-C9:active {
  background: rgba(250, 140, 22, 0.15);
  transform: translateY(1rpx);
}

/* 按钮样式 */
.btn-container {
  padding: 40rpx 20rpx;
}

.view-details-btn {
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.3);
  transition: all 0.3s;
}

.view-details-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(135, 206, 235, 0.3);
}

/* 加载和空状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #87CEEB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 表头文字样式 */
.table-header view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 学校专业列保持左对齐 */
.table-header .col-school,
.col-school {
  justify-content: flex-start;
}

/* 学校层次列保持左对齐 */
.table-header .col-level,
.col-level {
  justify-content: flex-start;
} 
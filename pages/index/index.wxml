<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="title">Hello,考研生</view>
    <view class="desc">欢迎来到你的考研预测空间。在这里，可根据你的自身情况及考研意向，为你提供定制化的分析预测服务。</view>
    
    <!-- 获取手机号按钮 -->
    <button 
      wx:if="{{!hasPhoneNumber}}"
      class="login-btn" 
      open-type="getPhoneNumber" 
      bindgetphonenumber="getPhoneNumber">
      点击进入
    </button>

    <!-- 进入按钮 -->
    <button 
      wx:if="{{hasPhoneNumber}}"
      class="login-btn" 
      bindtap="enterMainPage">
      点击进入
    </button>
  </view>
</scroll-view>

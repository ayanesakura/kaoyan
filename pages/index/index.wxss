/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  color: #fff;
  font-size: 32rpx;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  background-color: #87CEEB;
}

.title {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 30rpx;
}

.desc {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 80rpx;
}

.login-btn, .phone-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  border-radius: 44rpx;
  color: #87CEEB;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.auth-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx;
  display: block;
  margin: 0 auto;
  background-color: transparent;
  border: none;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-top: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.nickname-label {
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.nickname-input {
  flex: 1;
  color: #fff;
  font-size: 28rpx;
}

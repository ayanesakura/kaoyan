/**index.wxss**/
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.header {
  margin-top: 60rpx;
  text-align: center;
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(135, 206, 235, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 10rpx;
}

.enter-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 80rpx;
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 235, 0.3);
  border: none;
}

.enter-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 隐私弹窗样式 */
.privacy-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.privacy-content {
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
}

.privacy-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.privacy-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.privacy-btns {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.agree-btn, .disagree-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
}

.agree-btn {
  background: #87CEEB;
  color: #fff;
}

.agree-btn:active {
  opacity: 0.9;
}

.disagree-btn {
  background: #f5f5f5;
  color: #666;
}
.disagree-btn:active {
  background: #eee;
}

/* 去除按钮默认边框 */
button {
  padding: 0;
  background: none;
  line-height: normal;
}

button::after {
  border: none;
}


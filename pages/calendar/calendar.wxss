/* pages/calendar/calendar.wxss */
page {
  background: #f5f5f5;
  width: 100%;
  height: 100vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  width: 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-bar {
  padding: 12rpx 24rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-left {
  flex: 1;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-box {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 未填写信息提示 */
.info-required {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin-top: 88rpx;
}

.info-required-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.info-required-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.info-required-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.info-required-btn {
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

/* 运势内容区域 */
.fortune-content {
  padding-top: 88rpx;
  background: #f5f5f5;
  min-height: calc(100vh - 88rpx);
  box-sizing: border-box;
}

/* 日历头部 */
.calendar-header {
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.calendar-tabs {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 20rpx;
}

.tab {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 24rpx;
  border-radius: 28rpx;
  transition: all 0.3s ease;
}

.tab.active {
  color: #fff;
  background: #87CEEB;
}

.date-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.date-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.date-item.active {
  background: #87CEEB;
}

.date-item.active .weekday,
.date-item.active .date {
  color: #fff;
}

.weekday {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.date {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 运势指标 */
.fortune-metrics {
  padding: 32rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.metrics-header {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.total-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
}

.score-number {
  font-size: 96rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
  margin-bottom: 12rpx;
}

.score-label {
  font-size: 26rpx;
  color: #666;
}

.metrics-list {
  flex: 1;
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  height: 260rpx;
}

.metric-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  height: 100%;
}

.metric-bar {
  width: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  transition: height 0.3s ease;
}

.metric-score {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.metric-name {
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 运势总结 */
.fortune-summary {
  margin: 0 24rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.summary-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 宜忌提示 */
.fortune-tips {
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.tips-row {
  display: flex;
  gap: 20rpx;
}

.tips-section {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 14rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

/* 幸运信息 */
.lucky-info {
  padding: 0 24rpx 32rpx;
}

.lucky-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.lucky-item {
  flex: 1;
  min-width: 160rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.lucky-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
  display: block;
}

.lucky-value {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
  justify-content: center;
}

.color-box {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
}

.color-name {
  font-size: 28rpx;
  color: #333;
}

.lucky-value.number {
  font-size: 40rpx;
  font-weight: bold;
  color: #87CEEB;
}

/* 用户信息填写弹窗 */
.info-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 20rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-text {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  border: none;
} 
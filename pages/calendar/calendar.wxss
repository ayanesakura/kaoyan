/* pages/calendar/calendar.wxss */
page {
  background: #f5f5f5;
  width: 100%;
  height: 100vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  width: 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-bar {
  padding: 12rpx 24rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-left {
  flex: 1;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-box {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 未填写信息提示 */
.info-required {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin-top: 88rpx;
}

.info-required-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.info-required-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.info-required-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.info-required-btn {
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

/* 运势内容区域 */
.fortune-content {
  padding-top: 88rpx;
  background: #f5f5f5;
  min-height: calc(100vh - 88rpx);
  box-sizing: border-box;
}

/* 日历头部 */
.calendar-header {
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.calendar-tabs {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 20rpx;
}

.tab {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 24rpx;
  border-radius: 28rpx;
  transition: all 0.3s ease;
}

.tab.active {
  color: #fff;
  background: #87CEEB;
}

.date-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.date-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.date-item.active {
  background: #87CEEB;
}

.date-item.active .weekday,
.date-item.active .date {
  color: #fff;
}

.weekday {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.date {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 运势指标 */
.fortune-metrics {
  padding: 32rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.metrics-header {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.total-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
}

.score-number {
  font-size: 96rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
  margin-bottom: 12rpx;
}

.score-label {
  font-size: 26rpx;
  color: #666;
}

.metrics-list {
  flex: 1;
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  height: 260rpx;
  padding: 0 12rpx;
  align-items: flex-end;
}

.metric-item {
  flex: 1;
  min-width: 85rpx;
  max-width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  height: 100%;
}

.metric-bar {
  width: 16rpx;
  border-radius: 8rpx;
  background: #87CEEB;
  position: absolute;
  bottom: 85rpx;
  left: 50%;
  transform: translateX(-50%);
  transition: height 0.3s ease;
}

.metric-score {
  position: absolute;
  bottom: 45rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #666;
}

.metric-name {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #666;
  text-align: center;
  width: 85rpx;
  white-space: nowrap;
}

/* 运势总结 */
.fortune-summary {
  margin: 0 24rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.summary-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 宜忌提示 */
.fortune-tips {
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.tips-row {
  display: flex;
  gap: 20rpx;
}

.tips-section {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
  text-align: center;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 14rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  text-align: center;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  width: 90%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: transparent;
  backdrop-filter: none;
  border-radius: 28rpx;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 999;
}

.loading-container::before {
  display: none;
}

.loading-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
  flex-shrink: 0;
}

.loading-circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #87CEEB;
  border-right-color: #98FB98;
  border-bottom-color: #DDA0DD;
  animation: spin 1.5s linear infinite;
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.1), rgba(221, 160, 221, 0.1));
  backdrop-filter: blur(5px);
}

.loading-star {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: #FFB6C1;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  animation: twinkle 2s ease-in-out infinite;
  filter: drop-shadow(0 0 8rpx rgba(255, 255, 255, 0.6));
}

.star1 {
  top: 20%;
  left: 20%;
  background: #87CEEB;
  animation-delay: 0s;
}

.star2 {
  top: 30%;
  right: 20%;
  background: #98FB98;
  animation-delay: 0.4s;
}

.star3 {
  bottom: 20%;
  left: 40%;
  background: #DDA0DD;
  animation-delay: 0.8s;
}

.star4 {
  bottom: 40%;
  right: 25%;
  background: #FFD700;
  animation-delay: 1.2s;
  transform: scale(0.7);
}

.star5 {
  top: 50%;
  left: 15%;
  background: #FF7F50;
  animation-delay: 1.6s;
  transform: scale(0.8);
}

.loading-text-container {
  width: 400rpx;
  height: 80rpx;
  background: transparent;
  backdrop-filter: none;
  border-radius: 0;
  padding: 15rpx 20rpx;
  margin-top: 30rpx;
  box-shadow: none;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  flex-shrink: 0;
}

.loading-text {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  text-shadow: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  animation: fadeText 2s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes twinkle {
  0%, 100% { opacity: 0.2; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

@keyframes shimmer {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeText {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 1; }
}

/* 幸运信息 */
.lucky-info {
  padding: 0 24rpx 32rpx;
}

.lucky-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.lucky-item {
  flex: 1;
  min-width: 160rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.lucky-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
  display: block;
}

.lucky-value {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
  justify-content: center;
}

.color-box {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
}

.color-name {
  font-size: 28rpx;
  color: #333;
}

.lucky-value.number {
  font-size: 40rpx;
  font-weight: bold;
  color: #87CEEB;
}

/* 用户信息填写弹窗 */
.info-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 20rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-text {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  border: none;
} 
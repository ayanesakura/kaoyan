/* pages/calendar/calendar.wxss */
page {
  background: #f5f5f5;
  width: 100%;
}

.container {
  min-height: 100vh;
  width: 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 顶部导航 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 24rpx;
  background: transparent;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-left {
  flex: 1;
}

.nav-title {
  display: none;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-box {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 日历选择器 */
.calendar-tabs {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 32rpx;
  background: #fff;
  margin-bottom: 2rpx;
  position: sticky;
  top: 0;
  z-index: 99;
}

.tab {
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab.active {
  color: #87CEEB;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background: #87CEEB;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

/* 日期选择器 */
.date-scroll {
  background: #fff;
  padding: 16rpx 0;
  white-space: nowrap;
  margin-bottom: 2rpx;
}

.date-list {
  display: inline-flex;
  padding: 0 16rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 24rpx;
  margin: 0 4rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.date-item.active {
  background: #87CEEB;
  transform: scale(1.05);
}

.date-item.active .weekday,
.date-item.active .date {
  color: #fff;
}

.weekday {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.date {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 综合运势 */
.fortune-overview {
  width: 100%;
  margin: 0;
  padding: 24rpx 0;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.score-circle {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  margin: 0 40rpx 0 24rpx;
  flex-shrink: 0;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: absolute;
  background: conic-gradient(
    from 0deg,
    #87CEEB 0%,
    #87CEEB calc({{overallScore}} * 1%),
    transparent calc({{overallScore}} * 1%),
    transparent 100%
  );
  mask: radial-gradient(transparent 60%, black 60%);
  -webkit-mask: radial-gradient(transparent 60%, black 60%);
}

.circle-progress::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle at center, transparent 62%, #E8F6FF 62%);
  background-size: 8rpx 8rpx;
  opacity: 0.5;
}

.circle-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  line-height: 1;
}

.label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.fortune-metrics {
  flex: 1;
  display: flex;
  justify-content: space-between;
  height: 160rpx;
  padding-right: 24rpx;
  width: calc(100% - 224rpx); /* 160rpx + 40rpx + 24rpx */
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  padding: 0 8rpx;
}

.metric-bar {
  width: 12rpx;
  height: 100rpx;
  background: #F5F5F5;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  position: relative;
}

.bar-fill {
  width: 100%;
  background: linear-gradient(to top, #FF7B9C, #FFA5BC);
  position: absolute;
  bottom: 0;
  border-radius: 4rpx;
  transition: height 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.metric-item:nth-child(2) .bar-fill {
  background: linear-gradient(to top, #FFB258, #FFD4A0);
}

.metric-item:nth-child(3) .bar-fill {
  background: linear-gradient(to top, #7C8CFF, #A5B0FF);
}

.metric-item:nth-child(4) .bar-fill {
  background: linear-gradient(to top, #4CD9C3, #89E8DA);
}

.metric-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.metric-label {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 运势信息卡片 */
.fortune-info {
  margin: 2rpx 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.info-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.color-box {
  width: 44rpx;
  height: 44rpx;
  border-radius: 6rpx;
  margin-bottom: 6rpx;
  transition: transform 0.3s ease;
}

.color-box:active {
  transform: scale(1.1);
}

.info-value {
  font-size: 26rpx;
  color: #333;
}

.info-value.number {
  font-size: 30rpx;
  font-weight: 500;
}

.food-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

/* 运势描述 */
.fortune-detail {
  margin: 2rpx 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.detail-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 建议和避免 */
.suggestions {
  margin: 2rpx 0;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.suggestion-box {
  flex: 1;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 50%;
  box-sizing: border-box;
}

.suggestion-box:first-child {
  margin-right: 1rpx;
}

.suggestion-box:last-child {
  margin-left: 1rpx;
}

.suggestion-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.suggestion-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部时间信息 */
.bottom-info {
  margin: 2rpx 0;
  padding: 24rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.time {
  font-size: 24rpx;
  color: #666;
}

.phase {
  font-size: 24rpx;
  color: #666;
}

.more {
  font-size: 24rpx;
  color: #87CEEB;
  transition: all 0.3s ease;
}

.more:active {
  opacity: 0.8;
  transform: translateX(4rpx);
} 
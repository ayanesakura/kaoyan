page {
  background: #f5f5f5;
  box-sizing: border-box;
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top);
}

.card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: calc(100% - 40rpx);
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.form-item-tags {
  display: flex;
  flex-direction: column;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.form-item-tags:last-child {
  border-bottom: none;
}

.required::before {
  content: '*';
  color: #e6614f;
  margin-right: 4rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  font-size: 28rpx;
  text-align: left;
  color: #999;
  margin-left: 0;
}

.input-selected {
  color: #333;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
  padding: 0;
}

.tag {
  display: inline-flex;
  align-items: center;
  background: #f0f9ff;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #87CEEB;
  border: 1rpx solid #87CEEB;
}

.tag-delete {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #87CEEB;
  padding: 0 4rpx;
}

.tag-delete:active {
  opacity: 0.7;
}

.tips {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.tip-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tip-title {
  color: #87CEEB;
  margin-bottom: 4rpx;
}

.tip-desc {
  color: #999;
}

.button-group {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 20rpx;
  gap: 20rpx;
}

.back-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
  border: 1rpx solid #ddd;
}

.submit-btn {
  flex: 1;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 44rpx;
}

.school-select {
  position: absolute;
  top: calc(100% + 4rpx);
  left: 0;
  right: 0;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  z-index: 1000;
  max-height: 400rpx;
  overflow-y: auto;
  border-radius: 0 0 12rpx 12rpx;
  border: 1rpx solid #eee;
}

.loading {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.college-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.picker-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 40rpx;
  color: #999;
}

.picker-body {
  display: flex;
  height: 600rpx;
}

.major-column,
.direction-column {
  flex: 1;
  overflow-y: auto;
  height: 100%;
  border-right: 1rpx solid #eee;
}

.direction-column {
  border-right: none;
}

.column-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.column-item.selected {
  background: #f5f5f5;
  color: #87CEEB;
}

.column-item:active {
  background: #f5f5f5;
}

.column-item:last-child {
  border-bottom: none;
}

.city-search-container {
  display: flex;
  max-height: 400rpx;
  border-top: 1rpx solid #eee;
}

.city-left-column,
.city-right-column {
  flex: 1;
  overflow-y: auto;
  max-height: 400rpx;
}

.city-left-column {
  border-right: 1rpx solid #eee;
}

.city-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.city-item:last-child {
  border-bottom: none;
}

.city-item.selected {
  background: #f5f5f5;
  color: #87CEEB;
}

.city-item:active {
  background: #f5f5f5;
}

.picker-wrapper {
  width: 100%;
}

/* 进度条样式 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 0.8;
}

.progress-dot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #ddd;
  margin-bottom: 8rpx;
  border: 6rpx solid #f5f5f5;
  box-sizing: border-box;
}

.progress-text {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

.progress-line {
  flex: 1.5;
  height: 3rpx;
  background: #ddd;
  margin: 0 16rpx;
  margin-bottom: 32rpx;
}

.progress-item.active .progress-dot {
  background: #87CEEB;
  border-color: #e6f7ff;
}

.progress-item.active .progress-text {
  color: #87CEEB;
}

.progress-item.completed .progress-dot {
  background: #87CEEB;
  border-color: #e6f7ff;
}

.progress-item.completed .progress-text {
  color: #87CEEB;
}

.progress-line.completed {
  background: #87CEEB;
} 
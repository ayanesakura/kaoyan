.container {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 顶部信息样式 */
.header {
  position: relative;
  background: #fff;
  margin-top: -24rpx; /* 消除顶部空白 */
  padding-top: 24rpx; /* 保持内容位置不变 */
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.01) 0%, rgba(0, 0, 0, 0) 100%);
  z-index: 0;
}

.header-content {
  position: relative;
  z-index: 1;
  padding: 24rpx 32rpx 32rpx;
}

.school-info {
  margin-bottom: 28rpx;
}

.school-main {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.school-name {
  font-size: 44rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.3;
  margin-right: 16rpx;
  letter-spacing: 0.5rpx;
}

.school-code {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.03);
  line-height: 1.4;
  margin-top: 12rpx;
  font-family: 'Roboto Mono', monospace;
}

.school-extra {
  display: flex;
  align-items: center;
}

.department {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 1.4;
  position: relative;
  padding-left: 16rpx;
}

.department::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 20rpx;
  background: #1a1a1a;
  border-radius: 2rpx;
  opacity: 0.8;
}

.divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  margin: 28rpx 0;
}

.major-info {
  display: flex;
  align-items: flex-start;
}

.major-main {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.major-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  line-height: 1.3;
  margin-right: 16rpx;
  letter-spacing: 0.3rpx;
}

.major-code {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.03);
  line-height: 1.4;
  margin-top: 6rpx;
  font-family: 'Roboto Mono', monospace;
}

/* Tab栏样式 */
.tabs-scroll {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.tabs {
  display: flex;
  padding: 0 32rpx;
  min-width: 100%;
  box-sizing: border-box;
  height: 88rpx;
}

.tab-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  flex-shrink: 0;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #1a1a1a;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 3rpx;
  background: #1a1a1a;
  border-radius: 2rpx;
}

/* 内容区域样式 */
.content-swiper {
  width: 100%;
}

.swiper-item {
  height: 100%;
  overflow: hidden;
}

.direction-content {
  height: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 信息区块样式 */
.info-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.info-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #999;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #1a1a1a;
}

/* 考试科目样式 */
.subjects-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: #1a1a1a;
  border-radius: 2rpx;
}

.subject-group {
  margin-bottom: 32rpx;
}

.group-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.subject-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.subject-item {
  background: #f5f5f5;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.subject-name {
  color: #666;
  margin-right: 12rpx;
}

.subject-value {
  color: #1a1a1a;
}

/* 备注区域样式 */
.remarks-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.remarks-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
} 
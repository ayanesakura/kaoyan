.container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 顶部信息样式 */
.header {
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.school-info {
  margin-bottom: 16rpx;
}

.school-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.school-code {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.major-info {
  font-size: 28rpx;
  color: #666;
}

.department {
  margin-right: 16rpx;
}

.major-code {
  color: #999;
  margin-left: 8rpx;
}

/* Tab栏样式 */
.tabs-scroll {
  background: #fff;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 1;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tabs {
  display: flex;
  padding: 0 20rpx;
  min-width: 100%;
  box-sizing: border-box;
}

.tab-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 88rpx;
  flex-shrink: 0;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #87CEEB;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #87CEEB;
  border-radius: 2rpx;
  transition: all 0.3s;
}

/* 内容区域样式 */
.content-swiper {
  width: 100%;
}

.swiper-item {
  height: 100%;
  overflow: hidden;
}

.direction-content {
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 信息区块样式 */
.info-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.info-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #999;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 考试科目样式 */
.subjects-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #87CEEB;
}

.subject-group {
  margin-bottom: 24rpx;
}

.group-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.subject-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.subject-item {
  background: #f8f9fa;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.subject-name {
  color: #666;
  margin-right: 8rpx;
}

.subject-value {
  color: #333;
}

/* 备注区域样式 */
.remarks-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.remarks-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
} 
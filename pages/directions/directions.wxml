<view class="container">
  <!-- 顶部信息 -->
  <view class="header">
    <view class="header-bg"></view>
    <view class="header-content">
      <view class="school-info">
        <view class="school-main">
          <text class="school-name">{{school}}</text>
          <text class="school-code">{{school_code}}</text>
        </view>
        <view class="school-extra">
          <text class="department">{{departments}}</text>
        </view>
      </view>
      <view class="divider"></view>
      <view class="major-info">
        <view class="major-main">
          <text class="major-name">{{major}}</text>
          <text class="major-code">{{major_code}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- Tab栏 -->
  <scroll-view scroll-x enable-flex class="tabs-scroll" scroll-left="{{scrollLeft}}">
    <view class="tabs">
      <view 
        class="tab-item {{currentTab === index ? 'active' : ''}}" 
        wx:for="{{directions}}" 
        wx:key="yjfxdm"
        bindtap="switchTab"
        data-index="{{index}}">
        <text class="tab-text">{{item.yjfxmc}}</text>
      </view>
    </view>
  </scroll-view>

  <!-- 内容区域 -->
  <swiper 
    class="content-swiper" 
    current="{{currentTab}}" 
    bindchange="swiperChange"
    style="height: calc(100vh - 300rpx);">
    <swiper-item wx:for="{{directions}}" wx:key="yjfxdm" class="swiper-item">
      <scroll-view scroll-y class="direction-content">
        <!-- 方向基本信息 -->
        <view class="info-section">
          <view class="info-item">
            <text class="info-label">研究方向</text>
            <text class="info-value">{{item.yjfxmc}} ({{item.yjfxdm}})</text>
          </view>
          <view class="info-item">
            <text class="info-label">考试方式</text>
            <text class="info-value">{{item.ksfs}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">学位类型</text>
            <text class="info-value">{{item.xwlx}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">招生人数</text>
            <text class="info-value">{{item.zsrs}}</text>
          </view>
        </view>

        <!-- 考试科目 -->
        <view class="subjects-section">
          <view class="section-title">考试科目</view>
          <view class="subject-group" wx:for="{{item.subjects}}" wx:for-item="group" wx:key="index">
            <view class="group-title">科目组合 {{index + 1}}</view>
            <view class="subject-list">
              <view class="subject-item" wx:for="{{group}}" wx:for-item="subject" wx:key="code">
                <text class="subject-name">{{subject.name}}</text>
                <text class="subject-value">{{subject.value}}</text>
              </view>
            </view>
          </view>
        </view>

        <!-- 备注信息 -->
        <view class="remarks-section" wx:if="{{item.bz}}">
          <view class="section-title">备注说明</view>
          <text class="remarks-content">{{item.bz}}</text>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view> 
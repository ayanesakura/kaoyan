/* pages/analysis/analysis.wxss */
.container {
  padding: 20rpx;
  background: #fff;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 10rpx;
  padding: 0 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.comparison-table {
  display: flex;
  width: 100%;
  overflow: hidden;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
}

.label-column {
  min-width: 180rpx;
  background: #f5f5f5;
  border-right: 1rpx solid #eee;
}

.row-header {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.school-columns {
  flex: 1;
  white-space: nowrap;
  overflow-x: auto;
}

.school-column {
  display: inline-block;
  min-width: 300rpx;
  border-right: 1rpx solid #eee;
}

.school-column:last-child {
  border-right: none;
}

.row-cell {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.trend-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #87CEEB;
  font-size: 26rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.trend-btn::after {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #87CEEB;
  border-bottom: 2rpx solid #87CEEB;
  transform: rotate(-45deg);
  margin-left: 8rpx;
  position: relative;
  top: -2rpx;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.analysis-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.school-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.school-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.school-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.school-code {
  font-size: 24rpx;
  color: #999;
}

.major-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.label {
  color: #999;
  margin-right: 10rpx;
  min-width: 140rpx;
}

.section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 6rpx;
  height: 32rpx;
  background: #87CEEB;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.score-list, .ratio-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.score-item, .ratio-item {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.year {
  font-size: 26rpx;
  color: #87CEEB;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.score-detail, .ratio-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.score-detail text, .ratio-detail text {
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  border: 1rpx solid #eee;
}

.employment-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.employment-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}
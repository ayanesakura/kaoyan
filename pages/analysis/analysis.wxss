/* pages/analysis/analysis.wxss */
.container {
  padding: 20rpx;
  background: #fff;
  min-height: 100vh;
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 10rpx;
  padding: 0 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

/* 趋势展示面板 */
.trend-panel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.15);
  z-index: 1001;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
}

.trend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #eee;
  border-radius: 12rpx 12rpx 0 0;
}

.trend-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.trend-content {
  padding: 20rpx 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.trend-content.chart-mode {
  padding: 0;
  height: 600rpx;
  overflow: hidden;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.trend-item:last-child {
  border-bottom: none;
}

.trend-year {
  color: #666;
  font-size: 26rpx;
}

.trend-value {
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}

.comparison-table {
  display: flex;
  width: 100%;
  overflow: hidden;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
}

.label-column {
  min-width: 180rpx;
  background: #f5f5f5;
  border-right: 1rpx solid #eee;
}

.row-header {
  height: 88rpx; /* 减小固定高度 */
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  overflow: hidden; /* 防止内容溢出 */
  box-sizing: border-box;
}

.school-columns {
  flex: 1;
  white-space: nowrap;
  overflow-x: auto;
}

.school-column {
  display: inline-block;
  min-width: 300rpx;
  border-right: 1rpx solid #eee;
}

.school-column:last-child {
  border-right: none;
}

.row-cell {
  height: 88rpx; /* 减小固定高度 */
  padding: 10rpx 20rpx 24rpx; /* 调整内边距，为按钮留出空间 */
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  position: relative; /* 用于定位趋势按钮 */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden; /* 防止内容溢出 */
}

/* 迷你趋势按钮 */
.mini-trend-btn {
  position: absolute; /* 绝对定位 */
  bottom: 4rpx; /* 距底部距离 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 水平居中偏移 */
  font-size: 20rpx;
  color: #87CEEB;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  background: rgba(135, 206, 235, 0.1);
  white-space: nowrap; /* 防止文字换行 */
  line-height: 1.2; /* 调整行高 */
}

/* 调整有按钮的单元格内容位置 */
.row-cell.has-btn {
  padding-bottom: 30rpx; /* 为按钮预留空间 */
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.analysis-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.school-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.school-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.school-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.school-code {
  font-size: 24rpx;
  color: #999;
}

.major-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.label {
  color: #999;
  margin-right: 10rpx;
  min-width: 140rpx;
}

.section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 6rpx;
  height: 32rpx;
  background: #87CEEB;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.score-list, .ratio-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.score-item, .ratio-item {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.year {
  font-size: 26rpx;
  color: #87CEEB;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.score-detail, .ratio-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.score-detail text, .ratio-detail text {
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  border: 1rpx solid #eee;
}

.employment-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.employment-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.clickable {
  position: relative;
  cursor: pointer;
  padding-right: 20px !important;
}

.direction-icon {
  position: absolute;
  right: 5px;
  top: 50%;
  transform: translateY(-50%);
  color: #4a90e2;
  font-size: 18px;
  font-weight: bold;
}

.clickable:hover {
  background-color: rgba(74, 144, 226, 0.1);
}

.major-cell {
  height: 88rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
}

.major-cell:active {
  background: #f5f5f5;
}

.cell-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.major-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.major-name {
  font-size: 26rpx;
  color: #333;
  padding: 0;
}

.major-code {
  font-size: 26rpx;
  color: #333;
  margin-left: 4rpx;
  padding: 0;
}

.cell-arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 10rpx;
  flex-shrink: 0;
}
/* pages/analysis/analysis.wxss */
.container {
  padding: 40rpx 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin: 0 0 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

/* Tab样式优化 */
.probability-tabs {
  display: flex;
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  margin: 0 10rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  margin: 0 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  background: #87CEEB;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.3);
  transform: translateY(-2rpx);
}

/* 表格容器优化 */
.table-container {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  overflow: hidden;
  margin: 0 10rpx 30rpx;
  min-height: 1144rpx;
  transition: all 0.3s ease;
}

.table-content {
  display: flex;
  width: 100%;
  height: 100%;
}

/* 左侧标签列优化 */
.label-column {
  width: 180rpx;
  background: #f8f9fa;
  flex-shrink: 0;
  border-right: 1rpx solid rgba(0,0,0,0.06);
}

.row-header {
  min-height: 100rpx;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  color: #444;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.08);
  text-align: center;
  line-height: 1.4;
  font-weight: 500;
}

/* 右侧数据区域优化 */
.school-columns {
  flex: 1;
  overflow-x: auto;
  white-space: nowrap;
}

.school-column {
  display: inline-flex;
  flex-direction: column;
  min-width: 240rpx;
  width: fit-content;
  border-right: 1rpx solid rgba(0,0,0,0.04);
  background: linear-gradient(to right, rgba(255,255,255,0), rgba(0,0,0,0.02));
}

.school-column:last-child {
  border-right: none;
}

.row-cell {
  min-height: 100rpx;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  color: #333;
  border-bottom: 1rpx solid rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

/* 单元格内容 */
.cell-content {
  width: 100%;
  word-break: break-all;  /* 允许在任意字符间换行 */
  white-space: normal;  /* 允许文本换行 */
  line-height: 1.4;  /* 行高 */
}

/* 数字单元格特殊样式 */
.row-cell:nth-child(2),
.row-cell:nth-child(3) {
  font-size: 22rpx;
  color: #666;
}

/* 学校名称单元格 */
.row-cell:first-child {
  font-size: 28rpx;
  font-weight: 600;
  color: #222;
}

/* 录取概率样式 */
.row-cell:nth-child(4) {
  font-size: 32rpx;
  font-weight: 600;
  color: #87CEEB;
}

/* 评分样式 */
.score-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.score-value {
  font-size: 28rpx;
  font-weight: 500;
}

.score-high {
  color: #52c41a;
}

.score-medium {
  color: #faad14;
}

.score-low {
  color: #ff4d4f;
}

/* 查看详情按钮优化 */
.detail-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  background: rgba(135, 206, 235, 0.1);
  margin-top: 12rpx;
}

.detail-btn:active {
  background: rgba(135, 206, 235, 0.2);
}

/* AI分析按钮优化 */
.btn-container {
  padding: 40rpx 32rpx;
}

.ai-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #87CEEB, #5FB6E5);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(135, 206, 235, 0.3);
  transition: all 0.3s ease;
}

.ai-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.2);
}

/* 学校信息样式 */
.school-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.school-name {
  font-size: 28rpx;
  font-weight: 500;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.tag {
  font-size: 20rpx;
  color: #87CEEB;
  background: rgba(135, 206, 235, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.major-name {
  font-size: 24rpx;
  color: #666;
}

/* 趋势按钮优化 */
.trend-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  font-size: 22rpx;
  color: #87CEEB;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  background: rgba(135, 206, 235, 0.1);
  margin-top: 8rpx;
}

.trend-btn::after {
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid currentColor;
  border-bottom: 2rpx solid currentColor;
  transform: rotate(-45deg);
}

/* 修改遮罩层样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 修改趋势图弹窗样式 */
.trend-panel {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  max-height: 90vh;  /* 限制最大高度 */
  background: #fff;
  border-radius: 16rpx;
  z-index: 101;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.trend-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;  /* 防止头部压缩 */
}

.trend-title {
  font-size: 32rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.trend-content {
  flex: 1;  /* 内容区域自适应 */
  overflow: hidden;  /* 防止内容溢出 */
  position: relative;  /* 为图表提供定位上下文 */
  height: 600rpx;
}

/* 图表容器样式 */
.chart-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #87CEEB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

.empty-space {
  width: 100%;
  height: 1144rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.01), rgba(0,0,0,0.02));
}
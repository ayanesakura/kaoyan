/* pages/analysis/analysis.wxss */
.container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

/* Tab样式 */
.probability-tabs {
  display: flex;
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  margin: 0 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #87CEEB;
  background: rgba(135, 206, 235, 0.1);
  font-weight: 500;
}

/* 表格容器 */
.table-container {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 左侧标签列 */
.label-column {
  width: 150rpx;
  background: #f8f9fa;
  flex-shrink: 0;
  border-right: 1rpx solid #eee;
}

.row-header {
  height: 88rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

/* 右侧数据区域 */
.school-columns {
  flex: 1;
  overflow-x: auto;
  white-space: nowrap;
}

/* 学校列 */
.school-column {
  display: inline-block;
  vertical-align: top;
  width: 200rpx;
  border-right: 1rpx solid #eee;
}

.school-column:last-child {
  border-right: none;
}

/* 单元格 */
.row-cell {
  height: 88rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 学校名称单元格 */
.row-cell:first-child {
  font-weight: 500;
}

/* 查看详情按钮 */
.detail-btn {
  font-size: 20rpx;
  color: #87CEEB;
  margin-top: 4rpx;
  padding: 2rpx 8rpx;
}

/* AI分析按钮 */
.btn-container {
  padding: 32rpx;
}

.ai-btn {
  width: 100%;
  height: 88rpx;
  background: #87CEEB;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 235, 0.3);
}

/* 学校信息样式 */
.school-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.school-name {
  font-size: 28rpx;
  font-weight: 500;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.tag {
  font-size: 20rpx;
  color: #87CEEB;
  background: rgba(135, 206, 235, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.major-name {
  font-size: 24rpx;
  color: #666;
}

/* 趋势按钮 */
.trend-btn {
  font-size: 20rpx;
  color: #87CEEB;
  margin-top: 4rpx;
  padding: 4rpx 12rpx;
  background: rgba(135, 206, 235, 0.1);
  border-radius: 4rpx;
}

/* 趋势图弹窗 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.trend-panel {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  z-index: 101;
  overflow: hidden;
}

.trend-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.trend-title {
  font-size: 32rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.trend-content {
  height: 600rpx;
  padding: 24rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #87CEEB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

.empty-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.empty-tab-text {
  font-size: 28rpx;
  color: #666;
}